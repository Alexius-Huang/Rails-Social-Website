$pure: rgb(255,255,255);

@mixin jumbotron-resize($top, $bottom) {
	padding-top: $top;
	padding-bottom: $bottom;
}

html {

	.jumbotron {
		background-repeat: no-repeat;
		background-attachment: fixed;
		-webkit-background-size: cover;
	  -moz-background-size: cover;
	  -o-background-size: cover;
	  background-size: cover;
	  background-position: 20% 50%;

		color: $pure;
		h2 {
			text-align: center;
		}
		p {
			font-size: 100%;
			color: $pure;
		}
	}

	.profile-jumbotron {
		background-image: url(<%= asset_path 'default_bg_1.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}
	
	.contact-jumbotron {
		background-image: url(<%= asset_path 'contact_default.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}

	.jumbotron-2 {
		background-image: url(<%= asset_path 'default_bg_2.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}

	.sign-in-jumbotron {
		background-image: url(<%= asset_path 'sign_in.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}
	
	.sign-up-jumbotron {
		background-image: url(<%= asset_path 'sign_up.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}
	
	.welcome-jumbotron {
		padding-top: 0;
		background-image: url(<%= asset_path 'user_default.png' %>);
		@include jumbotron-resize(0%, 50%);
	}
}