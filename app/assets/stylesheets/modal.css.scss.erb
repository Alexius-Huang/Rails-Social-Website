$pure: rgb(255,255,255);
$main: rgb(26,99,156);
$main-tint-1: rgb(48,114,165);
$main-tint-2: rgb(71,130,175);
$main-tint-3: rgb(94,145,185);
$main-tint-4: rgb(117,161,195);
$main-tint-5: rgb(140,177,205);
$main-tint-6: rgb(163,192,215);
$main-tint-7: rgb(186,208,225);
$main-tint-8: rgb(209,223,235);

body {
	.modal {
		border-radius: 20px;

		.modal-content {
			border-radius: 20px;
		}

		.modal-header {
			text-align: center;
			background-color: $main-tint-6;
			color: $pure;
			border-top-left-radius: 20px;
			border-top-right-radius: 20px;
			border-bottom: 3px solid $main-tint-4;
		}

		.modal-footer {
			background-color: #eeeeee;
			border-top: 3px solid #aaaaaa;
			border-bottom-left-radius: 20px;
			border-bottom-right-radius: 20px;
		}
	}
}