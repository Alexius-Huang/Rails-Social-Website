$pure: rgb(255,255,255);

@mixin jumbotron-resize($top, $bottom) {
	padding-top: $top;
	padding-bottom: $bottom;
}

html {

	.gap-small { margin-top: 20px; }
	.gap-medium { margin-top: 40px; }
	.gap-large { margin-top: 70px}

	.jumbotron {
		background-repeat: no-repeat;
		background-attachment: fixed;
		-webkit-background-size: cover;
	  -moz-background-size: cover;
	  -o-background-size: cover;
	  background-size: cover;
	  background-position: 20% 50%;

		color: $pure;
		h2 {
			text-align: center;
		}
		p {
			font-size: 100%;
			color: $pure;
		}
	}

	.profile-jumbotron {
		background-image: url(<%= asset_path 'default_bg_1.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}
	
	.contact-jumbotron {
		background-image: url(<%= asset_path 'contact_default.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}

	.sign-in-jumbotron {
		background-image: url(<%= asset_path 'sign_in.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}
	
	.sign-up-jumbotron {
		background-image: url(<%= asset_path 'sign_up.jpg' %>);
		@include jumbotron-resize(5%, 30%);
	}
	
	.welcome-jumbotron {
		padding-top: 0;
		background-image: url(<%= asset_path 'user_default.png' %>);
		@include jumbotron-resize(0%, 35%);
	}
}

body {
	
	font-family: 'Ubuntu', sans-serif;	

	/* Form */
		
	div.div-form {
		color: $pure;
		background-color: $main-tint-4-alpha-light;
		padding: 10px 40px 20px 40px;
		border-radius: 10px;
		border: 1px solid $main-tint-4-alpha-light;

		h2 {
			text-align: center;
		}

		a {
			font-family: 'Ubuntu', sans-serif;		
			color: $pure;
			padding: 10px;
		}

		a:hover {
			text-decoration: none;
		}

		input.btn-default {
			color: $pure;
			background-color: $main;
			width: 100%;
		}
	}

	div.div-form:hover {
		background-color: $main-tint-3-alpha-strong;
	}

	/* Form */ 

	/* Tags */

	.tags {
		padding: 15px;
	}

	.tag-like {
		background-color: #aaaaaa;
		color: $pure;
		padding: 10px 20px;
		margin: 5px;
		line-height: 20px;
		border-radius: 20px;
		box-shadow: 2px 2px 3px #888888;
		display: inline-block;
	}

	.tag-link a {
		color: $pure;
		text-decoration: none;
	}

	.tag-link:hover {
		background-color: $main-tint-6;
	}

	.tag-like-green:hover { background-color: #33aa33; }
	.tag-like-red:hover { background-color: red; }
	.tag-like-yellow:hover { background-color: #dddd99; }

	/* Tags */


}

