<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<%= simple_form_for [@user, @topic, @article] do |f| %>
			<div class="form-group">
				<%= f.input :title, placeholder: "Article Title", autofocus: true, input_html: { :class => "form-control" } %>
				<%= f.input :content, as: :ckeditor, :input_html => { :ckeditor => { :toolbar => "Full", height: "1000px" } } %>

			</div>

			<div class="form-action">
				<%= f.submit "Submit" %>
			</div>
		<% end %>
	</div>
</div>