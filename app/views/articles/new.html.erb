<div class="gap-small"></div>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<h3><%= icon "apple" %> Compose New Article</h3>
	</div>
</div>

<hr class="col-md-offset-2 col-md-8">

<!-- ckEditor for New Article -->

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<%= simple_form_for [@topic, @article] do |f| %>
			<div class="form-group">
				<%= f.input :title, placeholder: "Article Title", autofocus: true, input_html: { :class => "form-control" } %>
				<%= f.input :content, as: :ckeditor, :input_html => { :ckeditor => { :toolbar => "Full" }  } %>

			</div>

			<div class="form-action">
				<%= f.submit "Submit" %>
			</div>
		<% end %>
	</div>
</div>

<div class="gap-large"></div>