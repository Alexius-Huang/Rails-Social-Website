<div class="gap-small"></div>

<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<h3><%= icon "camera" %> My Photos</h3>
	</div>
</div>

<hr class="col-md-offset-1 col-md-10">

<!-- Photo Albums Tags -->
<%= render 'photo_albums/photo_album_tags_group' %>

<hr class="col-md-offset-1 col-md-10">

<!-- Latest Photos -->
<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<h4><%= icon "picture" %> Latest Photos</h4>
		<div class="row" id="lastest-photo">
			<% unless @photos.empty? %>
				<%= render 'photos/photos' %>
			<% else %>
				<div class="col-md-12" style="text-align: center;">
					<h4>Currently there are no photos : (</h4>
				</div>
			<% end %>
		</div>
	</div>
</div>

<hr class="col-md-offset-1 col-md-10">

<div class="gap-large"></div>