<div class="gap-small"></div>

<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<h3><%= icon "camera" %> My Photos</h3>
	</div>
</div>

<hr class="col-md-offset-1 col-md-10">

<!-- Photo Albums Tags -->
<%= render 'photo_albums/photo_album_tags_group' %>

<hr class="col-md-offset-1 col-md-10">

<!-- Photo Present Section -->
<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<div class="row">
			<div class="col-md-4">
				<!-- Photo List Waited to be Construct -->
				<h4><%= icon "list" %> Photo List</h4>
				<br>
			</div>

			<!-- Latest Photo -->
			<div class="col-md-8" id="lastest-photo">
				<h4><%= icon "picture" %> Latest Photos</h4>
				<br>
				<% unless @photos.empty? %>
					<%= render @photos %>
				<% else %>
					<div class="col-md-12" style="text-align: center;">
						<h4>Currently there are no photos : (</h4>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<hr class="col-md-offset-1 col-md-10">

<div class="gap-large"></div>