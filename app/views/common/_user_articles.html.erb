<div class="gap-small"></div>

<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<h3><%= icon "apple" %> My Articles</h3>
	</div>
</div>

<hr class="col-md-offset-1 col-md-10">

<!-- Article Topics' Tags -->
<%= render 'topics/topic_tags_group' %>

<div class="row">
	<div class="col-md-offset-1 col-md-10">

		<div class="row">
			<div class="col-md-4">
				<!-- New Topic AJAX Form -->
				<%= render 'topics/new_topic_ajax_form' %>
			</div>

			<div class="col-md-4">
				<!-- Topic List -->
				<%= render 'topics/topics_ajax' %>
			</div>
		</div>

	</div>
</div>

<hr class="col-md-offset-1 col-md-10">

<!-- Latest Articles -->
<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<h4><%= icon "file" %> Latest Articles</h4>
		<div class="row" id="latest-article">
			<% unless @articles.empty? %>
				<%= render 'articles/articles' %>
			<% else %>
				<div class="col-md-12" style="text-align: center;">
					<h4>Currently there are no articles : (</h4>
				</div>
			<% end %>
		</div>
	</div>
</div>

<div class="gap-large"></div>