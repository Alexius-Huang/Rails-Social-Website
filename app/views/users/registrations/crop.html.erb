<div class="gap-small"></div>

<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<div style="text-align: center;">
			<h3><%= icon "picture" %> Crop User Image</h3>
		</div>

		<div class="gap-small"></div>

		<div class="crop-form">
			<%= form_for @user do |f| %>
				<div class="crop-form-control">
				  <div class="crop-box"><%= f.cropbox :avatar %></div>
				  <!-- <div class="preview-crop-box"><%= f.previewbox :avatar, width: 300, height: 300 %></div> -->
				</div>

				<div class="crop-form-action">
				  <%= f.submit 'Crop' %>
				</div>
			<% end %>		
		</div>
	</div>
</div>