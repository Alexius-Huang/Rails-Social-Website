<span class="tag-like tag-link tag-like-green pull-right <%= "highlight-green" if @highlight_token == "All Articles" %>">
	<%= link_to icon("eye-open") + " Browse All Articles", user_topics_path(@user) %>
</span>

<% if @user == current_user %>
	<% unless @highlight_token.nil? || @highlight_token == "All Articles" %>
		<span class="tag-like tag-like-yellow tag-link pull-right">
			<%= link_to icon("plus") + " Compose New Article", new_user_topic_article_path(@user, @topic) %>
		</span>
	<% end %>

	<!-- New Article Topic Modal Link -->
	<span class="tag-like tag-like-yellow tag-link pull-right hide-button-property">
		<button type="button" data-toggle="modal" data-target="#new-article-topic-modal"> <%= icon "list" %> New Article Category </button>
	</span>

	<span class="tag-like tag-like-yellow tag-link pull-right">
		<%= link_to icon("wrench") + " Setting", edit_user_registration_path %>
	</span>
<% end %>

<!-- New Article Topic Modal -->
<%= render 'topics/new_article_topic_modal' %>